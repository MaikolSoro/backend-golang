package middlew

import (
	"net/http"

	"github.com/maikol/backend-golang/bd"
)

func ChequeBD(next http.HandleFunc) http.HandleFunc {
	return func(w http.ResponseWriter, r *http.Request) {
		if bd.ChequeoConnection() == 0 {
			http.Error(w, "Conexi√≥n perdida con la Base de datos", 500)
			return
		}
		next.ServeHTTP(w, r)
	}

}
